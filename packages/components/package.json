{
  "name": "@readyapi/components",
  "description": "Readyapi component library",
  "license": "MIT",
  "author": "KhulnaSoft (https://github.com/khulnasoft)",
  "homepage": "https://github.com/khulnasoft/readyapi.js",
  "bugs": "https://github.com/khulnasoft/readyapi.js/issues/new/choose",
  "version": "0.0.1",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "run-p types:check \"build-only {@}\" --",
    "build-only": "vite build",
    "build:storybook": "storybook build",
    "dev": "storybook dev -p 5100",
    "format": "pnpm prettier --write .",
    "format:check": "pnpm prettier --check .",
    "lint:check": "eslint .",
    "lint:fix": "eslint .  --fix",
    "storybook": "storybook dev -p 5100",
    "test": "vitest",
    "typegen:icons": "node --no-warnings --loader ts-node/esm ./src/scripts/typegen.ts",
    "types:check": "vue-tsc --noEmit  --composite false"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./tailwind": {
      "import": "./src/tailwind/index.ts"
    }
  },
  "files": [
    "dist",
    "src/tailwind/**.ts"
  ],
  "module": "./dist/index.js",
  "dependencies": {
    "@headlessui/vue": "^1.7.21",
    "@readyapi/oas-utils": "workspace:*",
    "@storybook/test": "^8.0.9",
    "@vueuse/core": "^10.9.0",
    "class-variance-authority": "^0.7.0",
    "cva": "1.0.0-beta.1",
    "nanoid": "^5.0.7",
    "prismjs": "^1.29.0",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@readyapi/themes": "workspace:*",
    "@rise8/tailwind-pixel-perfect-preset": "^1.0.1",
    "@storybook/addon-essentials": "^8.0.9",
    "@storybook/addon-interactions": "^8.0.9",
    "@storybook/addon-links": "^8.0.9",
    "@storybook/blocks": "^8.0.9",
    "@storybook/vue3": "^8.0.9",
    "@storybook/vue3-vite": "^8.0.9",
    "@tsconfig/node18": "^18.2.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.12.7",
    "@types/prismjs": "^1.26.3",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/test-utils": "^2.4.5",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.19",
    "jsdom": "^22.1.0",
    "npm-run-all2": "^6.1.2",
    "plugins": "^0.4.2",
    "postcss": "^8.4.38",
    "postcss-prefix-selector": "^1.16.1",
    "storybook": "^8.0.9",
    "storybook-dark-mode": "^4.0.1",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-dts": "^3.9.0",
    "vite-plugin-lib-inject-css": "^2.0.1",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^1.5.2",
    "vue-tsc": "^1.8.27"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  }
}
